{% extends "base.html.twig" %}

{% block title%} Créer un lieu {% endblock %}

{% block stylesheets%} <link rel="stylesheet" href="{{ asset("css/form.css") }}">{% endblock %}

{% block body %}
    <h1>Créer un lieu</h1>
    <div>
        {{ form_start(lieuForm) }}
            {{ form_row(lieuForm.nom_lieu) }}
            {{ form_row(lieuForm.rue) }}
            {{ form_row(lieuForm.latitude) }}
            {{ form_row(lieuForm.longitude) }}
            {{ form_row(lieuForm.ville) }}
            <a href="{{ path('ville_insert') }}" class="btn btn-ajout "><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm6 13h-5v5h-2v-5h-5v-2h5v-5h2v5h5v2z"/></svg>  
            Ajouter une ville</a>
            {{ form_row(lieuForm.submit) }}
        {{ form_end(lieuForm) }}
    </div>
{% endblock %}