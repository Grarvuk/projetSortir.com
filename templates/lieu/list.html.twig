{% extends "base.html.twig" %}

{% block title%} Liste des lieux {% endblock %}

{% block stylesheets%} <link rel="stylesheet" href="{{ asset("css/profile.css") }}">{% endblock %}

{% block javascript%} 
    <script src="{{ asset("js/detail.js") }}"></script>
{% endblock %}

{% block body %}
    Liste des lieux <br>

    <table id="myTable" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Nom du lieu</th>
                    <th>Ville du lieu</th>
                </tr>
            </thead>
            <tbody>
                {% for lieu in lieux %}
                    <tr>
                        <td><a href="{{ path('lieu_detail', {'id' : lieu.id}) }}">{{ lieu.getNomLieu() }}</a></td>
                        <td><a href="{{ path('ville_detail', {'id' : lieu.ville.id}) }}">{{ lieu.ville() }}</a></td>
                    </tr>
                {% endfor%}
            </tbody>
            <tfoot>
            </tfoot>
        </table>

    <div>
    <a href="{{ path('lieu_insert') }}" class="btn btn-secondary">Ajouter un lieu</a>
    </div>
{% endblock %}