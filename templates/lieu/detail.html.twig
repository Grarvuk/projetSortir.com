{% extends "base.html.twig" %}

{% block title%} Détails du lieu {{ lieu.getNomLieu() }} {% endblock %}

{% block stylesheets%} <link rel="stylesheet" href="{{ asset("css/profile.css") }}">{% endblock %}

{% block body %}
    <h1>Détails du lieu {{ lieu.getNomLieu() }}</h1>
    <div>
        <p>Nom du lieu : {{ lieu.getNomLieu() }}</p>
        <p>Rue : {{ lieu.rue }}</p>
        <p>Latitude : {{ lieu.latitude }}</p>
        <p>Longitude : {{ lieu.longitude }}</p>
        <p>Ville : {{ lieu.ville }}</p>
        <div>
            <a href="{{ path('lieu_update', {'id' : lieu.id}) }}" class="btn btn-secondary">Modifier le lieu</a>
            <a href="{{ path('lieu_delete', {'id' : lieu.id}) }}" class="btn btn-secondary">Supprimer le lieu</a>
        </div>
    </div>
{% endblock %}